<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/itemTop"
        style="@style/Itemroom.Top"
        android:background="@drawable/img_top_room_details" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/img_bg_overlay_dark" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
  
            android:background="@drawable/img_top_white_bgoverlay_arrow" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_above="@+id/imageView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_moscat" />

    </RelativeLayout>

  <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:divider="@null"
        android:scrollbars="@null" >
    </ListView>

    <RelativeLayout
        android:id="@+id/sticky"
        style="@style/Itemroom.Sticky"
     
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textSize="20sp"
            android:textColor="@color/dashboard_actionbar"
            android:text="NEW SEASON RESTURANT" />

    </RelativeLayout>
        

</FrameLayout>